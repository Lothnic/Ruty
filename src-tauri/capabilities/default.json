{
    "$schema": "../gen/schemas/capabilities.json",
    "identifier": "default",
    "description": "Default permissions for Ruty",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "core:window:default",
        "core:window:allow-set-size",
        "core:window:allow-center",
        "core:window:allow-show",
        "core:window:allow-hide",
        "core:window:allow-set-focus",
        "shell:default",
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "args": [],
                    "name": "binaries/ruty-backend",
                    "sidecar": true
                }
            ]
        },
        "global-shortcut:default",
        "core:tray:default",
        "store:default",
        {
            "identifier": "store:allow-load",
            "allow": [
                {
                    "path": "settings.json"
                }
            ]
        },
        {
            "identifier": "store:allow-save",
            "allow": [
                {
                    "path": "settings.json"
                }
            ]
        },
        {
            "identifier": "store:allow-set",
            "allow": [
                {
                    "path": "settings.json"
                }
            ]
        },
        {
            "identifier": "store:allow-get",
            "allow": [
                {
                    "path": "settings.json"
                }
            ]
        }
    ]
}